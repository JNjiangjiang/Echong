$rem=(750/16)rem;
body
  height 100%
  #header
    width 100%
    z-index 10
    position fixed
    top 0
    left 0
    background white
    #search
      margin-top (30/$rem)
      position relative
      width 100%
      .location
        color #898989
        margin-right (20/$rem)
        margin-left (10/$rem)
        a
          display inline-block
          text-decoration none
          color #898989
      input
        background #eee
        border-style none
        border-radius (5/$rem)
        width (450/$rem)
        height (60/$rem)
      .icon
        width (60/$rem)
        height (60/$rem)
        background url("../../assets/search.png") no-repeat
        background-size (50/$rem) (50/$rem)
        position absolute
        top (10/$rem)
        right (60/$rem)
      .talk
        background url("../../assets/mydope.png") no-repeat
        background-size 100% 100%
        width (60/$rem)
        height (60/$rem)
        display inline-block
        position absolute
        right (10/$rem)
        top 0
    .el-menu-demo
      margin-top (-8/$rem)
  .main
    height 667px
    #content
      #discount
        background #C11722
        height (100/$rem)
        margin-top (200/$rem)
        ul
          width 100%
          height (100/$rem)
          li
            float left
            width 33%
            text-align center
            a
              text-decoration none
              color #F9D896
      #banner
        .el-carousel__item:nth-of-type(1)
          background url("../../assets/banner1.jpg") no-repeat
          background-size 100% 100%
        .el-carousel__item:nth-of-type(2)
          background url("../../assets/banner2.jpg") no-repeat
          background-size 100% 100%
        .el-carousel__item:nth-of-type(3)
          background url("../../assets/banner3.jpg") no-repeat
          background-size 100% 100%
        .el-carousel__item:nth-of-type(4)
          background url("../../assets/banner4.jpg") no-repeat
          background-size 100% 100%

      #main_img
        img
          width 100%
          height 100%
      #hotType
        ul
          li
            float left
            width 25%
            height 25%
            img
              width 100%
              height 100%
      #imgWrap
        width 100%
        height 100%
        img
          width 100%
          height 100%

      #crazyBuy
        margin-top 3%
        #notice
          width 100%
          height 100%
          float left
          position relative
          .notice
            vertical-align top
            margin-right (40/$rem)
            &:nth-of-type(1)
              display inline-block
              width (140/$rem)
              height (60/$rem)
              background url("../../assets/suprice.png") no-repeat
              background-size 100% 100%
            &:nth-of-type(3)
              display inline-block
              width (130/$rem)
              height (60/$rem)
              background url("../../assets/more.png") no-repeat
              background-size 100% 100%
              position absolute
              right 0
              top 0
        div
          display inline-block
          p
            display inline-block
        .listWrap
            width 100%
            .list
              margin-top 10px
              white-space nowrap
              float left
              li
                display inline-block
                width 10%
                height 100%
                img
                  width 100%
                  height 100%
                span
                  display block
                  /*color red*/
                  margin 0 auto
                  text-align center
                p
                  display inline-block
                  width 100%
                  text-align center
                  color red
        img
          width 100%
          height 100%
        #importGoods
          a
            img
              width 100%
              height 100%
        .famous
          width 100%
          height 100%
          .divimg
            width 25%
            float left
            &:nth-of-type(5)
              width 100%
              img
                float left
                width 50%
            img
              width 100%
              height 100%
        #fish
          ul
            width 100%
            li
              float left
              width 50%
              img
                width 100%
                height 100%

      .videoBox
        position relative
      #blank
        img
          width 100%
          height 100%
      .ft
          padding 0 10%
          text-align center
          margin-top 3%
          margin-bottom 10%
          span
            display inline-block
            margin-right 5%
            &:nth-of-type(1)
              color red
          p
            text-align center
            margin 5% auto

  #footer
    margin 20px auto
    #dog
      width (82/$rem)
      height (92/$rem)
      position fixed
      right 0
      bottom (300/$rem)
      z-index 2
      span
        width 100%
        height 100%
        display block
        background url("../../assets/godog.png") no-repeat
        background-size (160/$rem) auto
        animation dogAnimation 2s infinite steps(2,end)

      @keyframes dogAnimation
        0%
          background-position (2/$rem) center
        100%
          background-position (-162/$rem) center
    .footNav
      border-top 1px darkgray solid
      position fixed
      bottom 0
      left 0
      background white
      width 100%
      ul
        width 100%
        height (90/$rem)
        li
          width 25%
          float left
          text-align center
          &:nth-of-type(1)
            span
                display inline-block
                background url("../../assets/img.png") no-repeat
                background-position 0 0
                background-size: (468/$rem) (324/$rem)
                margin: 1% 0 0 0
                height: (80/$rem)
                width: (84/$rem)
          &:nth-of-type(2)
            span
                display inline-block
                background url("../../assets/img.png") no-repeat
                background-position (-170/$rem) (-82/$rem)
                background-size: (468/$rem) (324/$rem)
                margin: 1% 0 0 0
                height: (80/$rem)
                width: (84/$rem)
          &:nth-of-type(3)
            span
                display inline-block
                background url("../../assets/img.png") no-repeat
                background-position (-170/$rem) (-162/$rem)
                background-size: (468/$rem) (324/$rem)
                margin: 1% 0 0 0;
                height: (80/$rem)
                width: (84/$rem)
          &:nth-of-type(4)
            span
                display inline-block
                background url("../../assets/img.png") no-repeat
                background-position (-170/$rem) (-244/$rem)
                background-size: (468/$rem) (324/$rem)
                margin: 1% 0 0 0;
                height: (80/$rem)
                width: (84/$rem)



  #mask
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    z-index 100
    background white
    //display none
    header
      width 100%
      height (120/$rem)
      background white
      position relative
      line-height (120/$rem)
      vertical-align middle
      .title
        h2
          display inline-block
          margin-left 35%
          line-height (120/$rem)
          font-size (36/$rem)
        span
          display inline-block
          font-size (80/$rem)
          line-height (120/$rem)
          vertical-align middle
          color #D8D8D8
          position absolute
          right 0
          top 0
    .content
      width 100%
      height 100%
      .select
        width 100%
        overflow hidden
        div
          width 33%
          float left
          background lightgoldenrodyellow
          height (80/$rem)
          font-size 16px
          line-height (80/$rem)
          text-align center
      #city
        height 100%
        overflow hidden
        ul
          height (3600/$rem)
          .active
            list-style none
            border-bottom 1px solid #eee
            height (90/$rem)
            line-height (90/$rem)
            font-size (32/$rem)
