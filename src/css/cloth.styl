$rem = (750/16)rem

#header
  position fixed
  left 0
  top 0
  background #fff
  width 100%
  height (100/$rem)
  z-index 10
  text-align center
  line-height (100/$rem)
  .title
    position relative
    span
      display inline-block
      text-align center
      &:nth-of-type(1)
        height 100%
        font-weight 200
        font-size (80/$rem)
        color #333
        position absolute
        left 0
        top 0
      &:nth-of-type(2)
        font-size 18px
        display inline-block

.content
  height 80px
  width 100%
  #content
    #banner
      margin-top (100/$rem)
      .el-carousel__item:nth-of-type(1)
        background url("../../assets/b1.jpg") no-repeat
        background-size 100% 100%
      .el-carousel__item:nth-of-type(2)
        background url("../../assets/b2.jpg") no-repeat
        background-size 100% 100%
      .el-carousel__item:nth-of-type(3)
        background url("../../assets/b3.jpg") no-repeat
        background-size 100% 100%
      .el-carousel__item:nth-of-type(4)
        background url("../../assets/b4.jpg") no-repeat
        background-size 100% 100%
    #posttage
      ul
        li
          float left
          width 20%
          margin 2%
          img
            width 100%
            height 100%
            border-radius 50%
          a
            text-decoration none
            color #333
            text-align center
    #posttage_down
      width 100%
      overflow hidden
      div
        width 50%
        float left
        img
          width 100%
          height 100%
    .cab
      margin (50/$rem) auto
      p
        &:nth-child(1)
          width 100%
          text-align center
          span
            &:nth-of-type(1)
              display inline-block
              width (20/$rem)
              height (10/$rem)
              background url("../../assets/bar_left.png") no-repeat
              background-size 100% 100%
            &:nth-of-type(3)
              display inline-block
              width (20/$rem)
              height (10/$rem)
              background url("../../assets/bar_left.png") no-repeat
              background-size 100% 100%
        &:nth-child(2)
          width 100%
          height (40/$rem)
          text-align center
          color #333
    #swiper
      position relative
      top 0
      left 0
      width 100%
      overflow hidden
      div
        float left
        width 70%
        white-space nowrap
        box-shadow (10/$rem) (10/$rem) #f4f4f4
        margin 0 (30/$rem)
        border 1px solid #e4e4e4
        img
          width 100%
          height 100%
        p
          white-space normal
          color #666
          text-indent (32/$rem)
        &:nth-of-type(2)
          position absolute
          right (-400/$rem)
          top 0
          z-index -1
    .goods
      margin (30/$rem) auto
      .change
        width 100%
        height (320/$rem)
        background url("../../assets/change.jpg")
        background-size 100% 100%
        overflow hidden
        p
          color white
          font-weight 200
          border (10/$rem) solid white
          border-radius 50%
          height (200/$rem)
          width (200/$rem)
          margin (60/$rem) auto
          text-align center
          line-height (200/$rem)
      .list
        margin (30/$rem) auto
        overflow hidden
        ul
          width 100%
          float left
          white-space nowrap
          li
            width 29%
            margin 1% 2%
            height 100%
            display inline-block
            img
              width 100%
              height 100%
            p
              white-space normal


